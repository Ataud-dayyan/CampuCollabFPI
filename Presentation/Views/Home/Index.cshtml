@using CampusCollabFPI.Data.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model Presentation.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}


<!-- Animate.css -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link href="~/css/Dashboard.css" rel="stylesheet" />



<!-- Hero Section -->
@if (!User.IsInRole("Student"))
{
    <div class="hero-wrapper">
        <div id="bgCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
            <div class="carousel-inner">
                <div class="carousel-item" style="background-image: url('/images/Welcome.png');"></div>
                <div class="carousel-item active" style="background-image: url('/images/Welcome2.png');"></div>
                <div class="carousel-item" style="background-image: url('/images/Welcome3.png');"></div>
                <div class="carousel-item" style="background-image: url('/images/');"></div>

            </div>
        </div>
        <div class="hero-overlay">
            <div class="hero-text animate__animated animate__fadeInDown">
                <h1 class="display-4">Welcome, Admin</h1>
                <h2 class="h4 mb-3">@UserManager.GetUserName(User)</h2>
                <p class="lead mt-3">Manage campus collaboration and oversee student activities</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="hero-wrapper">
        <div id="bgCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
            <div class="carousel-inner">
                <div class="carousel-item active" style="background-image: url('/images/Welcome.png');"></div>
                <div class="carousel-item" style="background-image: url('/images/Welcome2.png');"></div>
                <div class="carousel-item" style="background-image: url('/images/Welcome3.png');"></div>
            </div>
        </div>
        <div class="hero-overlay">
            <div class="hero-text animate__animated animate__fadeInDown">
                <h1 class="display-4">Welcome back,</h1>
                <h2 class="h4 mb-3">@UserManager.GetUserName(User)!</h2>
                <p class="lead mt-3">Ready to collaborate and make an impact on campus?</p>
            </div>
        </div>
    </div>
}

<!-- Dashboard Content -->
<div class="dashboard-container">
    <div class="container">
        <!-- Stats Cards -->
        <div class="row mb-5">
            <div class="col-lg-3 col-md-6 mb-4">
                <a asp-controller="Group" asp-action="Index" style="text-decoration:none;" >
                    <div class="stats-card groups animate__animated animate__fadeInUp">
                    <div class="stats-number">@Model.ActiveGroups</div>
                    <div class="stats-label">Active Groups</div>
					</div>
				</a>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <a asp-controller="Group" asp-action="StudentList" style="text-decoration:none;" >
                    <div class="stats-card members animate__animated animate__fadeInUp animate__delay-2s">
                        <div class="stats-number">@Model.TotalStudents</div>
                        <div class="stats-label">Total Students</div>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stats-card admin animate__animated animate__fadeInUp animate__delay-3s">
                    <div class="stats-number">@Model.MyGroups</div>
                    <div class="stats-label">@(User.IsInRole("Student") ? "My Groups" : "Departments")</div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Recent Activity -->
            <div class="col-lg-8 mb-4">
                <h3 class="section-title">Recent Activity</h3>
                <div class="activity-card animate__animated animate__fadeInLeft">
                    <div class="d-flex align-items-center">
                        <div class="activity-icon group">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">New Group Created</h6>
                            <p class="text-muted mb-0">Photography Club was created by Sarah Johnson</p>
                            <small class="text-muted">2 hours ago</small>
                        </div>
                    </div>
                </div>

                <div class="activity-card animate__animated animate__fadeInLeft animate__delay-1s">
                    <div class="d-flex align-items-center">
                        <div class="activity-icon event">
                            <i class="fas fa-crown"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">New Group Leader Assigned</h6>
                            <p class="text-muted mb-0">Mike Chen was assigned as leader of Study Group</p>
                            <small class="text-muted">5 hours ago</small>
                        </div>
                    </div>
                </div>

                <div class="activity-card animate__animated animate__fadeInLeft animate__delay-2s">
                    <div class="d-flex align-items-center">
                        <div class="activity-icon member">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">New Student Registered</h6>
                            <p class="text-muted mb-0">Emma Davis joined the platform</p>
                            <small class="text-muted">1 day ago</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="col-lg-4 mb-4">
                <h3 class="section-title">Quick Actions</h3>
                <div class="quick-actions animate__animated animate__fadeInRight">
                    @if (User.IsInRole("Student"))
                    {
                        <a href="#" class="action-btn">
                            <i class="fas fa-plus-circle"></i>
                            <span>Create Group</span>
                        </a>
                        <a href="#" class="action-btn">
                            <i class="fas fa-search"></i>
                            <span>Find Groups</span>
                        </a>
                        <a href="#" class="action-btn">
                            <i class="fas fa-comments"></i>
                            <span>View Messages</span>
                        </a>
                        <a href="#" class="action-btn">
                            <i class="fas fa-user-edit"></i>
                            <span>Edit Profile</span>
                        </a>
                    }
                    else
                    {
                        <a href="#" class="action-btn" data-bs-toggle="modal" data-bs-target="#assignLeaderModal">
                            <i class="fas fa-user-crown"></i>
                            <span>Assign Group Leader</span>
                        </a>
                        <a href="#" class="action-btn">
                            <i class="fas fa-plus-circle"></i>
                            <span>Create Group</span>
                        </a>
                        <a href="#" class="action-btn">
                            <i class="fas fa-chart-bar"></i>
                            <span>View Reports</span>
                        </a>
                        <a href="#" class="action-btn">
                            <i class="fas fa-cog"></i>
                            <span>System Settings</span>
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Trending Groups -->
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="section-title">Trending Groups</h3>
                <div class="row">
                    @foreach (var group in Model.TrendingGroups)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card border-0 shadow-sm h-100 animate__animated animate__fadeInUp">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-primary rounded-circle p-2 me-3">
                                            <i class="fas fa-users text-white"></i>
                                        </div>
                                        <div>
                                            <h6 class="card-title mb-0">@group.Name</h6>
                                            <small class="text-muted">@group.MemberCount members</small>
                                        </div>
                                    </div>
                                    <p class="card-text">@group.Description</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a asp-controller="Group" asp-action="Details" asp-route-id="@group.Id" class="btn btn-outline-primary btn-sm">View Group</a>
                                        @if (!User.IsInRole("Student") && !string.IsNullOrEmpty(group.LeaderName))
                                        {
                                            <small class="text-muted">Leader: @group.LeaderName</small>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Assign Group Leader Modal -->
<div class="modal fade" id="assignLeaderModal" tabindex="-1" aria-labelledby="assignLeaderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignLeaderModalLabel">
                    <i class="fas fa-user-crown me-2"></i>Assign Group Leader
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="assignLeaderForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="groupSelect" class="form-label">Select Group</label>
                            <select class="form-select" id="groupSelect" required>
                                <option value="">-- Select a Group --</option>
                                <option value="1">Coding Club</option>
                                <option value="2">Environmental Club</option>
                                <option value="3">Photography Club</option>
                                <option value="4">Study Group</option>
                                <option value="5">Sports Club</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="studentSelect" class="form-label">Select Student</label>
                            <select class="form-select" id="studentSelect" required>
                                <option value="">-- Select a Student --</option>
                                <option value="1">John Doe - Computer Science</option>
                                <option value="2">Sarah Wilson - Environmental Science</option>
                                <option value="3">Mike Chen - Engineering</option>
                                <option value="4">Emma Davis - Business</option>
                                <option value="5">Alex Johnson - Mathematics</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="leadershipReason" class="form-label">Reason for Leadership Assignment</label>
                        <textarea class="form-control" id="leadershipReason" rows="3"
                                  placeholder="Explain why this student should be the group leader..."></textarea>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="notifyStudent" checked>
                            <label class="form-check-label" for="notifyStudent">
                                Send notification to student about leadership assignment
                            </label>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Note:</strong> The assigned student will receive leader privileges including the ability to manage group members and create group activities.
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="assignLeader()">
                    <i class="fas fa-crown me-2"></i>Assign Leader
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS (if not already included) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>